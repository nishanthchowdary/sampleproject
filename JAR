pipeline{
agent any
  tools{
  maven 'Maven'
  }
  stages{
    stage('SCM'){
      steps{
        git 'https://github.com/nishanthchowdary/sampleproject.git'
      }
    }
    stage('Build'){
      steps{
        sh "mvn clean package"
      }
    }
    stage('Junit'){
        steps{
          junit '**/target/surefire-reports/*.xml'
        }
    }
   }
}
